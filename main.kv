Screen:
    MDCard:
        size_hint: None, None
        size: 680, 1400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 10
        padding: 20
        spacing: 20
        orientation: 'vertical'

        MDLabel:
            id: wl
            text: "Welcome"
            font_size: 50
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        MDTextField:
            id: usr
            hint_text: "User name"
            icon_right: "account"
            size_hint_x: None
            width: 300
            font_size: 25
            pos_hint: {"center_x": .5}
            mode: "rectangle"

        MDTextField:
            id: passwd
            hint_text: "Enter password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 300
            font_size: 25
            pos_hint: {"center_x": .5}
            password: True
            mode: "rectangle"

        MDRoundFlatButton:
            text: "Login"
            font_size: 25
            pos_hint: {"center_x": .5}
            on_press: app.log()

        MDRoundFlatButton:
            text: "Clean"
            font_size: 25
            pos_hint: {"center_x": .5}
            on_press: app.clean()

        Widget:
            size_hint_y: None
            height: 200
